generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  name          String
  lastName      String
  password      String
  role          Role      @default(USER)
  refreshToken  String[]  @default([])
  isActive      Boolean   @default(true)
  imageUrl      String    @default("image")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now())
  cases         Case[]
}

model Case {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now())
  caseName   String
  jury       String
  caseNumber String
  applicant  String
  respondent String
  type       CaseType
  status     CaseStatus @default(INITIATED)
  User       User       @relation(fields: [userId], references: [id])
  userId     String     @db.ObjectId
  movements  Movement[]
  contacts   Contact[]
}

model Movement {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now())
  date      DateTime
  title     String
  type      MovementType
  done      Boolean      @default(false)
  content   String
  Case      Case         @relation(fields: [caseId], references: [id])
  caseId    String       @db.ObjectId
}

model Contact {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  lastName  String
  phone     String
  email     String
  address   String
  relation  ContactRelation
  caseId    String       @db.ObjectId
  Case      Case         @relation(fields: [caseId], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum CaseType {
  SUCCESSION
  EXECUTION
  TERMINATION
  DAMAGES_AND_LOSSES
  CONTRACT_DISPUTE
  FAMILY_LAW
  CRIMINAL
  PROPERTY_DISPUTE
  PERSONAL_INJURY
  INTELLECTUAL_PROPERTY
}

enum CaseStatus {
  INITIATED
  EVIDENCE
  JUDGMENT
  CLOSED
}

enum MovementType {
  APPOINTMENT
  PROCEDURAL_ACTION
}

enum ContactRelation {
  WITNESS
  EXPERT
  CLIENT
  DEFENDANT
}
